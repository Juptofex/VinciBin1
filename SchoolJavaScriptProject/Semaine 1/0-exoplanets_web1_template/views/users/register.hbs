    {{#if (eq errors null)}}
        
    {{else}}
        <br>
        <table>
                {{#each errors}}
                    <tr>
                        <td class="errors">{{this}}</td>
                    </tr> 
                {{/each}}
        </table>
    {{/if}}
</section>