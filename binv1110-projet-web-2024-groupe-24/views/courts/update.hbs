{{#if errorss}}
<section class="courtList">
    <div class="detailsContent">
        {{#each errorss}}
        <h1>{{this.msg}}</h1>
        {{/each}}
    </div>
</section>
{{else}}
<section class="courtUpdate">
    <h1>Mise à jour d'un terrain </h1>
    <form method="post" action="/courts/update" enctype="multipart/form-data">
        <input type="hidden" name="tennis_court_id" value="{{court.tennis_court_id}}">
        <div>
            <label>Nom du terrain : </label>
            <input type="text" value="{{court.name}}" name="uniqueNameCourt" required>
        </div>
        <div>
            <label>Type de revêtement de sol : </label>
            <select name="courtFloorType" required>
                <option {{#if (eq court.flooring_type "herbe" )}} selected {{/if}} value="herbe"> herbe
                </option>
                <option {{#if ( eq court.flooring_type "terre battue" )}} selected {{/if}} value="terre battue">
                    terre battue</option>
                <option {{#if ( eq court.flooring_type "synthétique" )}} selected {{/if}} value="synthétique">
                    synthétique</option>
            </select>
        </div>
        <div>
            <label>Emplacement : </label>
            <input type="text" value="{{court.location}}" name="uniqueLocationCourt" required>
        </div>
        <div>
            <label> Image du terrain : </label>
            <input type="file" name="imageCourt" value="{{court.picture_path}}">
        </div>

        <input type="submit" value="Mettre à jour">

    </form>
</section>
{{/if}}